<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide_bg"
    tools:context="com.peppypals.paronbeta.EnterKidInfo.AddKidFragment">


    <TextView
        android:id="@+id/addKids"
        android:layout_width="183dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        android:text="@string/birthday_Text"
        android:textAlignment="center"
        android:textColor="@color/text_on_btn"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


    <Button
        android:id="@+id/ageDoneBtn"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/greenbar"
        android:text="@string/done_btn"
        android:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="187dp"
        android:background="@color/cake_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:layout_width="237dp"
            android:layout_height="151dp"
            android:layout_gravity="center"
            android:background="@drawable/cake" />

    </FrameLayout>

    <TextView
        android:id="@+id/kidAgeResult"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addKids" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="254dp"
        android:layout_height="167dp"
        style="@style/MyDatePickerStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/kidAgeResult"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ageDoneBtn"
        app:layout_constraintHorizontal_bias="0.507"
        tools:layout_editor_absoluteY="281dp"
        app:layout_constraintVertical_bias="0.545" />
</android.support.constraint.ConstraintLayout>
