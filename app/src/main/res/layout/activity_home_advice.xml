<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_editor_absoluteY="-28dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/extraToughText"
            android:layout_width="300dp"
            android:layout_height="89dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:gravity="bottom|center"
            android:text="@string/doYouKnow_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="487dp"
            android:layout_height="231dp"
            android:background="@color/cake_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/daily"
            app:layout_constraintHorizontal_bias="0.493" />

        <TextView
            android:id="@+id/dailyTitle"
            android:layout_width="184dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:text="@string/daily_title"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="0dp"
            android:layout_height="316dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/extraToughText"
            app:srcCompat="@drawable/pinkbg"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/adviceTitle"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:text="title"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView18" />

        <TextView
            android:id="@+id/extraDetails"
            android:layout_width="352dp"
            android:layout_height="111dp"
            android:text="TextView"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/adviceTitle"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/adviceTitle"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/adviceTitle"
            app:layout_constraintHorizontal_bias="0.515" />

        <Button
            android:id="@+id/chatBtn"
            android:layout_width="154dp"
            android:layout_height="48dp"
            android:background="@drawable/greenbar"
            android:text="@string/seemore_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView18"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18" />

        <ImageView
            android:id="@+id/shareBtn"
            android:layout_width="33dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/share"
            android:layout_marginStart="110dp"
            app:layout_constraintTop_toTopOf="@+id/saveBtn"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="110dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView18" />

        <ImageView
            android:id="@+id/saveBtn"
            android:layout_width="36dp"
            android:layout_height="39dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/saveicon"
            app:layout_constraintLeft_toRightOf="@+id/shareBtn"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/extraDetails"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/imageView18"
            app:layout_constraintHorizontal_bias="0.34" />

        <ImageView
            android:id="@+id/kidsWords"
            android:layout_width="0dp"
            android:layout_height="487dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatBtn"
            app:srcCompat="@drawable/yellowbg" />

        <ImageView
            android:id="@+id/chatBar"
            android:layout_width="474dp"
            android:layout_height="454dp"
            app:srcCompat="@drawable/bgblue"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/kidsWords"
            android:layout_marginStart="7dp" />

        <TextView
            android:id="@+id/parentsText"
            android:layout_width="231dp"
            android:layout_height="113dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chatBar"
            android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.447" />

        <TextView
            android:id="@+id/kidsText"
            android:layout_width="302dp"
            android:layout_height="174dp"
            android:text="TextView"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/kidsWords"
            android:layout_marginTop="8dp" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>






