<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide_bg"
    tools:context="com.peppypals.paronbeta.InfoActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="175dp"
        android:layout_height="201dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/important"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/importantText"
        android:layout_width="319dp"
        android:layout_height="239dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="19dp"
        android:letterSpacing="0.05"
        android:text="@string/importantInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.164" />

    <Button
        android:id="@+id/understandBtn"
        android:layout_width="314dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/greenbar"
        android:letterSpacing="0.2"
        android:text="@string/understand_btn"
        android:textColor="?android:attr/colorControlNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/importantText"
        app:layout_constraintRight_toRightOf="@+id/importantText"
        app:layout_constraintTop_toBottomOf="@+id/importantText"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
