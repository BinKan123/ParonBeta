<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide_bg"
    tools:context="com.peppypals.paronbeta.EmailLoginActivity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="338dp"
        android:layout_height="212dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,16:9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164"
        app:srcCompat="@drawable/rectangle_2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="151dp"
        android:layout_height="104dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:srcCompat="@drawable/logo"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        android:layout_marginBottom="157dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/login_email_placehold"
        android:inputType="textPersonName"
        android:textColor="@color/text_on_btn"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.329" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="LÃ–SENORD"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textColor="@color/text_login"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/emailText"
        app:layout_constraintRight_toRightOf="@+id/emailText"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <TextView
        android:id="@+id/forgotPw"
        android:layout_width="130dp"
        android:layout_height="23dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/login_forgotPW"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/emailLogin" />

    <Button
        android:id="@+id/emailLogin"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/greenbar"
        android:backgroundTint="@color/login_bg_btn"
        android:letterSpacing="0.1"
        android:text="@string/login_loggain"
        android:textColor="@color/text_on_btn"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/eller"
        android:layout_width="190dp"
        android:layout_height="24dp"
        android:layout_marginLeft="0dp"
        android:text="@string/login_eller"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/forgotPw"
        app:layout_constraintRight_toRightOf="@+id/forgotPw"
        app:layout_constraintHorizontal_bias="0.58"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/emailLogin"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/loginWithFB"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_chainStyle="spread" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginWithFB"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:letterSpacing="0.1"
        android:text="@string/login_facebook"
        android:textColor="@color/text_on_btn"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bluebar"
        app:layout_constraintLeft_toLeftOf="@+id/emailLogin"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/eller" />

    <Button
        android:id="@+id/loginWithGmail"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pinkbar"
        android:letterSpacing="0.1"
        android:text="@string/login_gmail"
        android:textColor="@color/text_on_btn"
        app:layout_constraintLeft_toLeftOf="@+id/loginWithFB"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/loginWithFB" />

    <TextView
        android:id="@+id/registerHere"
        android:layout_width="217dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="@string/login_register_text"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginWithGmail"
        app:layout_constraintHorizontal_bias="0.502"
        tools:layout_editor_absoluteX="69dp" />

    <TextView
        android:id="@+id/emailError"
        android:layout_width="291dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/emailText"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <TextView
        android:id="@+id/pwError"
        android:layout_width="290dp"
        android:layout_height="26dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/passwordText"
        app:layout_constraintTop_toBottomOf="@+id/passwordText" />

    <TextView
        android:id="@+id/fillBoth"
        android:layout_width="271dp"
        android:layout_height="26dp"
        android:layout_marginBottom="-23dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/emailText"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="@+id/emailText"
        app:layout_constraintRight_toRightOf="@+id/emailText" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="330dp"
        android:layout_height="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/eller"
        app:layout_constraintLeft_toLeftOf="@+id/emailLogin"
        app:layout_constraintRight_toRightOf="@+id/emailLogin"
        app:layout_constraintTop_toTopOf="@+id/eller"
        app:srcCompat="@drawable/line"
        tools:layout_editor_absoluteX="13dp" />

</android.support.constraint.ConstraintLayout>
