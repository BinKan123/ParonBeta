<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide_bg"
    tools:context="com.peppypals.paronbeta.EnterKidInfo.AddKidFragment">


    <TextView
        android:id="@+id/addKids"
        android:layout_width="176dp"
        android:layout_height="33dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/add_kid_Text"
        android:textAlignment="center"
        android:textColor="@color/text_on_btn"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <Button
        android:id="@+id/addKidBtn"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/addonemore"
        android:drawableRight="@drawable/ic_add"
        android:drawableTint="@color/text_on_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/add_kid"
        android:textAlignment="textStart"
        android:textColor="@color/text_on_btn"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addKids"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/secondKidBtn"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:background="@drawable/graybar"
        android:drawableRight="@drawable/ic_add"
        android:drawableTint="?android:attr/textColorSecondaryInverseNoDisable"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/add_kid"
        android:textAlignment="textStart"
        android:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/addKidBtn"
        app:layout_constraintRight_toRightOf="@+id/addKidBtn"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/addKidBtn" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/graybar"
        android:text="@string/done_btn"
        android:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="187dp"
        android:background="@color/pink_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">




            <View
                android:layout_width="292dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/heart" />



    </FrameLayout>

</android.support.constraint.ConstraintLayout>
